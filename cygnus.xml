<theme>
    <formatVersion>4</formatVersion>
    <include>./_res/colorsets/cygnus.xml</include>

<!-- System View -->
	<view name="system">

	<!-- Page Layout -->
        <image name="system-background" extra="true">
            <origin>0 0</origin>
            <pos>0 0</pos>
            <size>1 1</size>
            <tile>true</tile>
        </image>

        <image name="bottom" extra="true">
            <path>./_res/images/white.png</path>
            <origin>0 1</origin>
            <pos>0 1</pos>
            <size>1 0.0655</size>
        </image>

		<image name="bottom-highlight" extra="true">
			<path>./_res/images/white.png</path>
			<origin>0 0</origin>
			<pos>0 0.9345</pos>
			<size>1 0.005</size>
		</image>

        <helpsystem name="help">
            <fontPath>./_res/fonts/TitilliumWeb-Regular.ttf</fontPath>
            <fontSize>0.035</fontSize>
		</helpsystem>

	<!-- System Specific Images -->
        <image name="mascot" extra="true">
            <origin>0 1</origin>
            <pos>0 0.9345</pos>
            <maxSize>0.75 0.75</maxSize>
        </image>
        <image name="system" extra="true">
            <origin>1 0</origin>
            <pos>0.94 0.08</pos>
            <maxSize>0.43 0.60</maxSize>
        </image>
	</view>

    <!-- Custom Carousel System View -->

    <!-- <feature supported="carousel"> -->

		<view name="system">

			<carousel name="systemcarousel">
				<pos>0 0.60</pos>
				<size>1 0.30</size>
				<color>00000000</color>
				<logoScale>1.85</logoScale>
				<logoSize>0.30 0.15</logoSize>
				<maxLogoCount>1</maxLogoCount>
			</carousel>

			<text name="systemInfo">
                <fontPath>./_res/fonts/TitilliumWeb-Regular.ttf</fontPath>
				<pos>0.010 0.943</pos>
				<size>0.980 0.050</size>
				<fontSize>0.035</fontSize>
			</text>

		</view>

	<!-- </feature> -->

    <!-- Game View - All -->
    <view name="basic, detailed, video, grid">

        <image name="background">
            <origin>0 0</origin>
            <pos>0 0</pos>
            <size>1 1</size>
            <tile>true</tile>
        </image>
        <image name="top" extra="true">
            <path>./_res/images/white.png</path>
            <origin>0 0</origin>
            <pos>0 0</pos>
            <size>1 0.16</size>
        </image>
        <image name="top-highlight" extra="true">
            <path>./_res/images/white.png</path>
            <origin>0 1</origin>
            <pos>0 0.161</pos>
            <size>1 0.004</size>
        </image>
        <image name="bottom-highlight" extra="true">
            <path>./_res/images/white.png</path>
            <origin>0 0</origin>
            <pos>0 0.9345</pos>
            <size>1 0.005</size>
        </image>
        <image name="bottom" extra="true">
            <path>./_res/images/white.png</path>
            <origin>0 1</origin>
            <pos>0 1</pos>
            <size>1 0.0655</size>
        </image>


    <!-- System Specific Images -->
		<image name="logo">
			<!-- Left Aligned at Top -->
			<origin>0 0.5</origin>
			<pos>0.03 0.0775</pos>
			<maxSize>0.55 0.10</maxSize>
		</image>

    </view>


    <view name="basic, detailed, video">
        <image name="gamelist-matte" extra="true">
            <path>./_res/images/white.png</path>
            <origin>0 0</origin>
            <pos>0.03 0.163</pos>
            <size>0.36 0.46</size>
        </image>

        <textlist name="gamelist">
            <fontPath>./_res/fonts/TitilliumWeb-SemiBold.ttf</fontPath>
            <pos>0.03 0.163</pos>
            <size>0.36 0.45</size>
            <fontSize>0.035</fontSize>
            <lineSpacing>1.45</lineSpacing>
            <horizontalMargin>0.015</horizontalMargin>
            <alignment>left</alignment>
            <forceUppercase>0</forceUppercase>
        </textlist>
    </view>

    <view name="basic">
        <image name="overlay" extra="true">
            <origin>0.5 0.5</origin>
            <pos>0.715 0.55</pos>
            <maxSize>0.51 0.7</maxSize>
        </image>

        <image name="gamelist-matte" extra="true">
            <size>0.4 0.7742</size>
        </image>

        <textlist name="gamelist">
            <size>0.4 0.71</size>
        </textlist>
    </view>

    <view name="detailed, video">
    <!-- Metadata -->
        <text name="md_lbl_players">
            <fontSize>0.024</fontSize>
            <forceUppercase>1</forceUppercase>
            <size>0 0</size>
        </text>

        <text name="md_players, md_genre, md_developer, md_publisher">
            <fontSize>0.024</fontSize>
            <size>0 0</size>
            <forceUppercase>1</forceUppercase>
        </text>

        <datetime name="md_releasedate, md_lastplayed">
            <fontSize>0.024</fontSize>
            <forceUppercase>1</forceUppercase>
        </datetime>

        <rating name="md_rating">
            <size>0.095 0</size>
            <filledPath>./_res/images/star_filled_spacing.svg</filledPath>
            <unfilledPath>./_res/images/star_hollow_spacing.svg</unfilledPath>
        </rating>
        <image name="md_hidden">
            <pos>0.823 0.700</pos>
            <path>./_res/images/hidden.svg</path>
            <maxSize>0.032 0.032</maxSize>
            <origin>0.5 0.5</origin>
        </image>
        <image name="md_kidgame">
            <pos>0.883 0.700</pos>
            <path>./_res/images/kid.svg</path>
            <maxSize>0.032 0.032</maxSize>
            <origin>0.5 0.5</origin>
        </image>
        <image name="md_favorite">
            <pos>0.940 0.700</pos>
            <path>./_res/images/favorite.svg</path>
            <maxSize>0.032 0.032</maxSize>
            <origin>0.5 0.5</origin>
        </image>

        <text name="md_description">
            <fontSize>0.023</fontSize>
        </text>

        <text name="md_lbl_rating, md_lbl_lastplayed, md_lbl_playcount, md_playcount, md_publisher, md_lbl_genre, md_lbl_developer, md_lbl_publisher, md_lbl_releasedate">
            <fontPath>./_res/fonts/AdobeBlank.ttf</fontPath>
            <pos>0 0</pos>
            <size>0 0</size>
        </text>

    <!-- Description -->
        <image name="description-matte" extra="true">
            <path>./_res/images/white.png</path>
            <origin>0 0</origin>
            <pos>0.03 0.6759</pos>
            <size>0.36 0.22</size>
        </image>
        <image name="description-matteh" extra="true">
            <path>./_res/images/white.png</path>
            <origin>0.0 0.0</origin>
            <pos>0.03 0.64</pos>
            <size>0.36 0.035</size>
        </image>
        <image name="description-mattes" extra="true">
            <path>./_res/images/white.png</path>
            <origin>0.0 0.0</origin>
            <pos>0.03 0.890</pos>
            <size>0.36 0.035</size>
        </image>

        <text name="md_description">
            <fontPath>./_res/fonts/TitilliumWeb-Regular.ttf</fontPath>
            <fontSize>0.021</fontSize>
            <lineSpacing>1.55</lineSpacing>
            <pos>0.0345 0.69</pos>
            <size>0.355 0.195</size>
        </text>

        <!-- Metadata -->

            <!-- Limit the length of the metadata -->
            <text name="md_genre, md_developer, md_publisher,md_lastplayed,md_rating,md_players,md_releasedate">
                <size>0.13 0.023</size>
            </text>

            <datetime name="md_lastplayed">
                <fontPath>./_res/fonts/TitilliumWeb-SemiBold.ttf</fontPath>
                <pos>0.035 0.645</pos>
            </datetime>
            <rating name="md_rating">
                <pos>0.18 0.646</pos>
            </rating>
            <text name="md_lbl_players">
                <fontPath>./_res/fonts/TitilliumWeb-SemiBold.ttf</fontPath>
                <pos>0.30 0.640</pos>
            </text>
            <text name="md_players">
                <fontPath>./_res/fonts/TitilliumWeb-SemiBold.ttf</fontPath>
                <pos>0.37 0.645</pos>
            </text>
            <text name="md_genre">
                <fontPath>./_res/fonts/TitilliumWeb-SemiBold.ttf</fontPath>
                <alignment>left</alignment>
                <pos>0.035 0.898</pos>
            </text>
            <text name="md_developer">
                <fontPath>./_res/fonts/TitilliumWeb-SemiBold.ttf</fontPath>
                <alignment>center</alignment>
                <pos>0.14 0.898</pos>
            </text>
            <datetime name="md_releasedate">
                <fontPath>./_res/fonts/TitilliumWeb-SemiBold.ttf</fontPath>
                <pos>0.313 0.898</pos>
            </datetime>

    </view>


    <view name="detailed">
        <image name="md_image">
            <origin>0.5 0.5</origin>
            <pos>0.70 0.55</pos>
            <maxSize>0.55 0.55</maxSize>
        </image>
    </view>

<!--    <feature supported="video"> -->

    <view name="video">
        <video name="md_video">
           <origin>0.5 0.5</origin>
            <pos>0.75 0.55</pos>
            <maxSize>0.5 0.5</maxSize>
            <delay>0.01</delay>
            <default>./_res/images/static.mp4</default>
            <showSnapshotNoVideo>true</showSnapshotNoVideo>
            <showSnapshotDelay>false</showSnapshotDelay>
        </video>
        <image name="md_marquee">
            <pos>0.48 0.30</pos>
            <origin>0 0.5</origin>
            <maxSize>0.3 0.20</maxSize>
        </image>
        <image name="md_image">
            <origin>0.5 0.5</origin>
            <pos>0.55 0.8</pos>
            <maxSize>0.22 0.22</maxSize>
        </image>
    </view>

<view name="detailed, video">
    <image name="system" extra="true">
        <!-- Right Aligned at Top -->
        <origin>1 0</origin>
        <pos>0.98 0.02</pos>
        <maxSize>0.2 0.25</maxSize>
    </image>
</view>

</theme>
